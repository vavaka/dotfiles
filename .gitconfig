[core]
    editor = vim -f
	autocrlf = input

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[color]
    branch = auto
    diff = auto
    status = auto
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow bold
    changed = green
    deleted = red
    untracked = cyan
